player = {
 x = 64,
 y = 64,
 speed = 1
 dash_speed = 3
}

function _update()
 if btn(0) then player.x -= player.speed end
 if btn(1) then player.x += player.speed end
 if btn(2) then player.y -= player.speed end
 if btn(3) then player.y += player.speed end
end

function _draw()
 cls()
 spr	(0, player.x, player.y)
end
