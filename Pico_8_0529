function _init()
	//print("hello world") is print
	//position = 100 is a variable
	x_position=50
	y_position=50
	button=""
end

function _update()
 if	btn(➡️) then
  x_position += 3
	elseif btn(⬅️) then
  x_position -= 3
	elseif btn(⬅️) then
  x_position -= 3
	elseif btn(⬇️) then
  y_position += 3
	elseif btn(⬆️) then
  y_position -= 3
	end
end

function _draw()
	cls()
	map()
	spr(1,x_position,y_position)
	print(button)
end
