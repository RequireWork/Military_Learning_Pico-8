x = 30
y = 30
function _draw()
	cls(1)
	spr(1,x,y)
	if (btn(0)) x -= 2
	if (btn(1)) x += 2
	if (btn(⬆️)) y -= 2
	if (btn(⬇️)) y += 2
	
end
//First Code To Test Out On Pico!

print("hello world")
rectfill(80,80,120,100,12)
circfill(70,90,20,14)
for i=1,4 do print(i) end

//Moving!

x = 64 y = 64
function _update()
 if (btn(0)) then x = x-1 end
 if (btn(1)) then x = x+1 end
 if (btn(2)) then y = y-1 end
 if (btn(3)) then y = y+1 end
end

function _draw()
	cls(5)
	circfill(x,y,7,14)
end
